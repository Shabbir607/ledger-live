#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules/node-hid/src/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules/node-hid/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules/node-hid/src/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules/node-hid/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node-hid@2.1.2/node_modules:/home/dev-shabbir/Downloads/ledger-live-desktop-win32-x64-1.0.0/ledger-live-desktop-win32-x64/resources/app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../src/show-devices.js" "$@"
else
  exec node  "$basedir/../../src/show-devices.js" "$@"
fi
